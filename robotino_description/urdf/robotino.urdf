<?xml version="1.0"?>
<robot name="robotino">

  <!-- *************************** Base Footprint ***************************** -->
  <link name="base_footprint">
  </link>

  <!-- ************************************************************************ -->

  <!-- ****************************** Main Body ******************************* -->
  <link name="base_link">

    <visual>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Body.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Body.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="20"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>
  <!-- ************************************************************************ -->

  <!-- ******************************* Wheel 0 ******************************** -->
  <link name="wheel0_link">

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.00001"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
  </link>

    <!-- ========== Wheel 0 - Joint ========== --> 
    <joint name="wheel0_joint" type="fixed"> <!--<joint name="wheel0_joint" type="continuous"></joint> --> 
      <parent link="base_link"/>
      <child link="wheel0_link"/>
      <origin xyz="-0.0001 0.1825 0.059154" rpy="0 0 0"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>	
    </joint>
  <!-- ************************************************************************ -->

  <!-- ******************************* Wheel 1 ******************************** -->
  <link name="wheel1_link">

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.00001"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
  </link>

  <!-- ========== Wheel 1 - Joint ========== --> 
  <joint name="wheel1_joint" type="fixed"> <!--<joint name="wheel1_joint" type="continuous"></joint> -->
    <parent link="base_link"/>
    <child link="wheel1_link"/>
    <origin xyz="-0.157067 -0.090625 0.059154" rpy="0 0 2.094395102393195"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>	
  </joint>
  <!-- ************************************************************************ -->

  <!-- ******************************* Wheel 2 ******************************** -->
  <link name="wheel2_link">

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.00001"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
  </link>

  <!-- ========== Wheel 2 - Joint ========== --> 
  <joint name="wheel2_joint" type="fixed"> <!--<joint name="wheel2_joint" type="continuous"></joint> -->
    <parent link="base_link"/>
    <child link="wheel2_link"/>
    <origin xyz="0.156867 -0.090625 0.059154" rpy="0 0 -2.094395102393195"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>	
  </joint> 
  <!-- ************************************************************************ -->

  <!-- ROS PLANAR MOVE -->
  <gazebo>
    <plugin name="gazebo_ros_planar_move" filename="libgazebo_ros_planar_move.so">

      <ros>

        <remapping>cmd_vel:=cmd_vel</remapping>
        <remapping>odom:=odom</remapping>

      </ros>

      <update_rate>100</update_rate>
      <publish_rate>10</publish_rate>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

      <odometry_frame>odom_demo</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>

      <!--
      <covariance_x>0.0001</covariance_x>
      <covariance_y>0.0001</covariance_y>
      <covariance_yaw>0.01</covariance_yaw>
      -->

    </plugin>
  </gazebo>

  <gazebo reference="wheel1_link">
    <material>Gazebo/Grey</material>
    <!-- <fdir1>0 1 0"</fdir1> -->
    <!-- <mu1>1.7</mu1> -->
    <!-- <mu2>0.2</mu2> -->
  </gazebo>

  <gazebo reference="wheel2_link">
      <material>Gazebo/Grey</material>
      <!-- <fdir1>0 1 0"</fdir1> -->
      <!-- <mu1>1.7</mu1> -->
      <!-- <mu2>0.2</mu2> -->
  </gazebo>

  <gazebo reference="wheel3_link">
      <material>Gazebo/Grey</material>
      <!-- <fdir1>0 1 0"</fdir1> -->
      <!-- <mu1>1.7</mu1> -->
      <!-- <mu2>0.2</mu2> -->
  </gazebo>

