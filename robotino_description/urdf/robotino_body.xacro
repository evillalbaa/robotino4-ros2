<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- ****************************** Main Body ******************************* -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Body.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Body.dae" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>
<!-- ***************************** Wheel Macro ***************************** --> 
    <xacro:macro name="wheel_link" params="number">
        <link name="wheel${number}_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                  <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
                </geometry>
              </visual>
              <collision>
                <geometry>
                  <mesh filename="package://robotino_description/meshes/Robotino4_Wheel.dae" scale="0.01 0.01 0.01"/>
                </geometry>
              </collision>
        </link>
    </xacro:macro>
  
<!-- ******************************* Wheel 0 ******************************* --> 
<xacro:wheel_link number="0" />
<!-- ******************************* Wheel 1 ******************************* --> 
<xacro:wheel_link number="1" />
<!-- ******************************* Wheel 2 ******************************* --> 
<xacro:wheel_link number="2" />

<!-- ****************************** Platform ******************************* -->  
  <link name="platform_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Platform.dae" scale="0.009 0.009 0.009"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://robotino_description/meshes/Robotino4_Platform.dae" scale="0.009 0.009 0.009"/>
      </geometry>
    </collision>
  </link>

<!-- ========== Wheel 0 - Joint ========== --> 
<joint name="wheel0_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel0_link"/>
    <origin xyz="-0.0001 0.1825 0.059154" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>	
  </joint>

<!-- ========== Wheel 1 - Joint ========== --> 
<joint name="wheel1_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel1_link"/>
    <origin xyz="-0.157067 -0.090625 0.059154" rpy="0 0 2.094395102393195"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>	
  </joint>

<!-- ========== Wheel 2 - Joint ========== --> 
  <joint name="wheel2_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel2_link"/>
    <origin xyz="0.156867 -0.090625 0.059154" rpy="0 0 -2.094395102393195"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>	
  </joint>  

<!-- ========== Platform - Joint ========== --> 
  <joint name="platform_joint" type="fixed">
    <parent link="base_link"/>
    <child link="platform_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 0" rpy="0 0 0"/>	
  </joint>

<!-- ***************************** END ***************************** -->  
</robot>
